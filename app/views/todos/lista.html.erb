
<div class="row my-5 py-3">

    <div class="card my-1 col-md-6 col-sm-12">
    <h1 class="text-success">Completados</h1>
    <% @todos_completed.each do |t| %>
        <blockquote class="blockquote">
            <p class="mb-0">&nbsp;&nbsp;<%= t.description %></p>
        </blockquote>  
    <% end %>
    </div>

    <div class="card my-1 col-md-6 col-sm-12">
        <h1 class="text-danger">No Completados</h1>
    <% @todos_uncompleted.each do |t| %>
        <blockquote class="blockquote">
            <p class="mb-0">&nbsp;&nbsp;<%= t.description %></p>
        </blockquote>
    <% end %>
    </div>
</div>