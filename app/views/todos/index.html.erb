
<div class="my-5 py-3">
    <div class="row">
        <% @todos.each do |todo| %>
            <div class="card my-1 col-md-6 col-sm-12">
                <div class="card-body mx-3 ">
                    <h4>
                        <%= link_to todo.description, todo %>
                    </h4 class="text-dark text-decoration-none">
                    <% if  todo.completed == true %>
                        <div class="badge badge-success text-wrap" style="width: 6rem;">
                            Tarea completada
                        </div>
                    
                    <% else %>
                    <button type="button" class="btn btn-outline-success"> 
                        <%= link_to "Completar", todo_completed_path(todo)%>
                    </button>
                    <button type="button" class="btn btn-outline-danger">
                        <%= link_to "Borrar", todo, method: :delete %>
                    </button>
                    <% end %>
                    
                </div>
            </div>
        <% end %>
    </div>
    <button type="button" class="btn btn-outline-info p-3">
        <%= link_to "Crear nueva tarea", todos_new_path %>
    </button>    
    
</div>
